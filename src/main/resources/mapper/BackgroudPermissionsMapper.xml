<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.youke.dao.BackgroudPermissionsMapper">
  <resultMap id="BaseResultMap" type="com.youke.entity.BackgroudPermissions">
    <!--@mbg.generated-->
    <!--@Table backgroud_permissions-->
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="permission" jdbcType="VARCHAR" property="permission" />
    <result column="describes" jdbcType="VARCHAR" property="describes" />
    <result column="menu_id" javaType="INTEGER" property="menuId" />
  </resultMap>
  <sql id="Base_Column_List">
    <!--@mbg.generated-->
    id, permission, `describes`
  </sql>

    <insert id="insertPemissionsRelRole">
      INSERT INTO backgroud_role_rel_permissions
        (b_permission_id,b_role_id)
      value
        (#{bPermissionId,jdbcType=INTEGER},#{bRoleId,jdbcType=INTEGER})
    </insert>

  <delete id="deletePemissionsRelRole">
    DELETE
    FROM backgroud_role_rel_permissions
    WHERE
    b_permission_id=#{bPermissionId,jdbcType=INTEGER}
    AND
    b_role_id=#{bRoleId,jdbcType=INTEGER}
  </delete>

  <select id="listPermissionsByRoleId" resultMap="BaseResultMap">
    SELECT
        b.id,b.permission,b.describes
    FROM backgroud_role_rel_permissions AS a
    LEFT JOIN backgroud_permissions AS b ON a.b_role_id=b.id
    WHERE
    a.b_role_id=#{roleId,jdbcType=INTEGER}
  </select>

</mapper>